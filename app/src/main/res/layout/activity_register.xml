<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7DC7E8"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".register">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="Register Screen"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="Create an Account"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="563dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tname"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:gravity="start"
            android:inputType="text"
            android:text=" Name:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="326dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bg"
            android:drawableRight="@drawable/ic_baseline_person_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:hint="Enter Your Name Here"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="#6C6464" />

        <TextView
            android:id="@+id/temail"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:gravity="start"
            android:inputType="text"
            android:text=" Email:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="325dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bg"
            android:drawableRight="@drawable/ic_baseline_email_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:hint="Enter Email Here"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="#6C6464" />

        <TextView
            android:id="@+id/tpnh"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:gravity="start"
            android:inputType="text"
            android:text=" Phonenumber:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="325dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bg"
            android:drawableRight="@drawable/ic_baseline_local_phone_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:hint="Enter Phonenumber Here"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="#6C6464" />

        <TextView
            android:id="@+id/tpnhs"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="@font/amaranth"
            android:gravity="start"
            android:inputType="text"
            android:text=" Password:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/passs"
            android:layout_width="325dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bg"
            android:drawableRight="@drawable/ic_baseline_vpn_key_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:hint="Enter a Password Here"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="#6C6464" />

        <Button
            android:id="@+id/register"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:text="Submit"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:backgroundTint="#4BCA50" />

        <TextView
            android:id="@+id/gotologin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="Already Registered ? Click this text"
            android:textColor="#02105C"
            android:textSize="16dp" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:visibility="invisible"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>