<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7DC7E8"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".login">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="Login Screen"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="537dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tes"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="@font/amaranth"
            android:gravity="start"
            android:inputType="text"
            android:text="Email:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="336dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bg"
            android:drawableEnd="@drawable/ic_baseline_email_24"
            android:drawableRight="@drawable/ic_baseline_email_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:hint="Enter Email Here"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="#6C6464" />

        <TextView
            android:id="@+id/tes1"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="@font/amaranth"
            android:gravity="start"
            android:inputType="text"
            android:text="Password: "
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="336dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:drawableTint="@color/black"
            android:ems="10"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:hint="Enter Password Here"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="#7A6F6F" />

        <TextView
            android:id="@+id/forgotpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="@font/amaranth"
            android:gravity="end"
            android:inputType="text"
            android:padding="10dp"
            android:text="Forgot Password?"
            android:textColor="#02105C"
            android:textSize="18dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:text="Submit"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:backgroundTint="#4BCA50" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:inputType="text"
            android:text="Login With:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="69dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/google"
                android:layout_width="88dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:srcCompat="@drawable/google_logo_9808" />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@drawable/pngtreefacebook_logo_icon_fb_logo_3570308" />

        </LinearLayout>

        <TextView
            android:id="@+id/gotoregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="New here? Click this text"
            android:textColor="#02105C"
            android:textSize="16dp" />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_marginTop="10dp"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>